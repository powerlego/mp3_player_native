{
  "extends": "@tsconfig/react-native/tsconfig.json",

  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "incremental": true,
    "rootDir": "./src",
    "lib": ["esnext", "ES6"]
  }
}
